{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "typeRoots": [
            "src/types"
        ],
        "outDir": "dist",
        "resolveJsonModule": true,
        "target": "es5",
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "files": true
    }
}